

<h1 class="font-monospace"> <%= @task.title  %></h1>

<div class="card p-4">
  <div class="card-body">
    <h3> <%= @task.details %> </h3>
    <p> <%= @done %> </p>
  </div>
</div>

<button type="button" class="btn btn-info p-2 m-2 mt-3"> <%= link_to 'Back to List', tasks_path %> </button>
<button class="btn btn-info p-2 m-2 mt-3"> <%= link_to 'Edit task', edit_task_path(@task) %>  </button>
<button class="btn btn-info p-2 m-2 mt-3"> <%= link_to 'Delete Task', delete_task_path(@task), data: {turbo_method: 'DELETE', turbo_confirm: 'Are you sure ?'} %>  </button>
